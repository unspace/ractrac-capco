<table class='table table-hover'>
<thead>
  <tr>
    <th>Seen At</th>
    <th>Location</th>
    <th>Description</th>
    <th>Height (cm)</th>
    <th>Weight (kg)</th>
    <th>BMI</th>
  </tr>
</thead>
<tbody>
  {{#each model as |sighting|}}
    {{#link-to 'sightings.show' sighting tagName='tr'}}
      <td>{{format-date sighting.seenAt}}</td>
      <td>{{sighting.location}}</td>
      <td>{{sighting.description}}</td>
      <td>{{sighting.height}}</td>
      <td>{{sighting.weight}}</td>
      <td>{{sighting.bmi}}</td>
    {{/link-to}}
  {{/each}}
</tbody>
</table>

